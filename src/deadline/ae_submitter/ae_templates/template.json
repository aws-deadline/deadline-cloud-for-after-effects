{
    "specificationVersion": "jobtemplate-2023-09",
    "name": "After Effects Simple Job Testing",
    "parameterDefinitions": [
        {
            "name": "AfterEffectsProjectFile",
            "type": "PATH",
            "objectType": "FILE",
            "dataFlow": "IN",
            "userInterface": {
                "control": "CHOOSE_INPUT_FILE",
                "label": "After Effects Project File",
                "groupLabel": "After Effects Settings",
                "fileFilters": [
                    {
                        "label": "After Effects Project Files",
                        "patterns": [
                            "*.aep",
                            "*.aepx"
                        ]
                    },
                    {
                        "label": "All Files",
                        "patterns": [
                            "*"
                        ]
                    }
                ]
            },
            "description": "The After Effects Project file to render."
        },
        {
            "name": "StartFrame",
            "type": "STRING",
            "userInterface": {
                "control": "LINE_EDIT",
                "label": "Start Frame",
                "groupLabel": "After Effects Settings"
            },
            "description": "The frame to start the render on. E.g. 1,8,11",
            "minLength": 1
        },
        {
            "name": "EndFrame",
            "type": "STRING",
            "userInterface": {
                "control": "LINE_EDIT",
                "label": "End Frame",
                "groupLabel": "After Effects Settings"
            },
            "description": "The frame to end the render on . E.g. 3,9,15",
            "minLength": 1
        },
        {
            "name": "OutputPattern",
            "type": "STRING",
            "description": "Name for the output file.",
            "default": "Output_[####]"
        },
        {
            "name": "Format",
            "type": "STRING",
            "description": "File type.",
            "default": "png"
        },
        {
            "name": "Description",
            "type": "STRING",
            "description": "Chosen Description."
        },
        {
            "name": "CompName",
            "type": "STRING",
            "description": "Selected composition to render."
        },
        {
            "name": "OutputFilePath",
            "type": "PATH",
            "objectType": "DIRECTORY",
            "dataFlow": "OUT",
            "userInterface": {
                "control": "CHOOSE_DIRECTORY",
                "label": "Output File Path",
                "groupLabel": "After Effects Settings"
            },
            "description": "The render output path."
        }
    ],
    "steps": [
        {
            "name": "AfterEffects Simple Render",
            "script": {
                "actions": {
                    "onRun": {
                        "command": "powershell",
                        "args": [
                            "{{Task.File.runScript}}"
                        ]
                    }
                },
                "embeddedFiles": [
                    {
                        "name": "runScript",
                        "filename": "bootstrap.bat",
                        "type": "TEXT",
                        "runnable": true,
                        "data": 
                        "aerender -project \"{{Param.AfterEffectsProjectFile}}\" -comp \"{{Param.CompName}}\" -output \"{{Param.OutputFilePath}}/{{Param.OutputPattern}}.{{Param.Format}}\" -s \"{{Param.StartFrame}}\" -e \"{{Param.EndFrame}}\"\n"
                    }
                ]
            }
        }
    ]
}